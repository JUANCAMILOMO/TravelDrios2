<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_lista">

    <fragment
        android:id="@+id/navigation_lista"
        android:name="com.tjj.sitiosfragment.ui.list.listaFragment"
        android:label="fragment_lista"
        tools:layout="@layout/fragment_lista" >
        <action
            android:id="@+id/action_listaFragment_to_settingsFragment"
            app:destination="@id/navigation_preference" />
        <action
            android:id="@+id/action_listaFragment_to_detalleFragment"
            app:destination="@id/navigation_detalle" />
    </fragment>
    <fragment
        android:id="@+id/navigation_detalle"
        android:name="com.tjj.sitiosfragment.ui.datail.DetalleFragment"
        android:label="DetalleFragment"
        tools:layout = "@layout/fragment_detalle">
        <argument
            android:name="sitioss"
            app:argType="com.tjj.sitiosfragment.modelos.Sitio" />
    </fragment>
    <fragment
        android:id="@+id/navigation_preference"
        android:name="com.tjj.sitiosfragment.ui.preference.SettingsFragment"
        android:label="SettingsFragment" />
</navigation>